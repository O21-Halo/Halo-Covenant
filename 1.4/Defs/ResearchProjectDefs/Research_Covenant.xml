		<baseCost>2500</baseCost>
		<prerequisites>
			<li>HaloRim_CovenantArmory</li>
		</prerequisites>
		<researchViewX>5</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>
	
	<ResearchProjectDef ParentName="O21HaloResearch">
		<defName>HaloRim_CovenantTurrets</defName>
		<label>Covenant Turrets</label>
		<description>Unlocks blueprints for building Covenant turrets.</description>
		<baseCost>3000</baseCost>
		<prerequisites>
			<li>HaloRim_CovenantConstruction</li>
			<li>HaloRim_CovenantWeapons</li>
		</prerequisites>
		<researchViewX>6</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>
	
