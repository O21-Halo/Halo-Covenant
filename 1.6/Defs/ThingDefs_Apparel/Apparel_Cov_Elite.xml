		<statBases>
			<Mass>2.5</Mass>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>600</MaxHitPoints>
			<ArmorRating_Sharp>1.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.58</ArmorRating_Blunt>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<tradeTags>
			<li>CovApparel</li>
		</tradeTags>
		<apparel>
			<wornGraphicPath>HaloRim/Apparel/EliteArmor/Apparel</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
				<li>Feet</li>
				<li>Neck</li>
			</bodyPartGroups>
			<tags>
				<li>CovApparel</li>
				<li>CovElite</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Single">
			<color>(81,110,157)</color>
		</colorGenerator>
	</ThingDef>
	
