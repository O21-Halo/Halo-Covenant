<Defs>
	
	<ThingDef ParentName="ArmorMachineableBase" Name="CovEliteArmor">
		<defName>HaloRim_Cov_EliteArmor</defName>
		<label>elite armor</label>
		<techLevel>Spacer</techLevel>
		<description>Armor commonly worn by Elites.</description>
		<graphicData>
			<texPath>HaloRim/Apparel/EliteArmor/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(81,110,157)</color>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>HaloRim_CovenantArmor</researchPrerequisite>
