	<ThingDef ParentName="ArmorMachineableBase">
		<defName>HaloRim_Cov_BruteUndersuit</defName>
		<label>brute undersuit</label>
		<techLevel>Spacer</techLevel>
		<description>Apparel commonly worn by Brutes, under their armour.</description>
		<graphicData>
			<texPath>HaloRim/Apparel/BruteUndersuit/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>HaloRim_CovenantArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
            <recipeUsers Inherit="False">
                <li>HaloRim_WorkbenchCov</li>
            </recipeUsers>
		</recipeMaker>
		<costList>
			<Cloth>60</Cloth>
		</costList>
		<statBases>
			<Mass>4</Mass>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>600</MaxHitPoints>
			<MarketValue>500</MarketValue>
			<Insulation_Cold>60</Insulation_Cold>
			<Insulation_Heat>60</Insulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<tradeTags>
			<li>CovApparel</li>
		</tradeTags>
		<apparel>
			<tags>
				<li>CovApparel</li>
				<li>CovBrute</li>
			</tags>
			<wornGraphicPath>HaloRim/Apparel/BruteUndersuit/Apparel</wornGraphicPath>
			<useWornGraphicMask>True</useWornGraphicMask>
			<layers>
				<li>OnSkin</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
	
